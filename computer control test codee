int relay = 6;
void setup() {
Serial.begin(9600);
 pinMode(6, OUTPUT); 
  pinMode(role, OUTPUT);
 }

void loop() {
 if(Serial.available()>0)
   {     
      char data= Serial.read(); 
      switch(data)
      {
        
        case 'a': digitalWrite(6, LOW); delay(2000); 
     
        case 'd': digitalWrite(6, HIGH);break;  delay(2000); 
        default : break;
      }
      Serial.println(data);
   }
   delay(50);
}
